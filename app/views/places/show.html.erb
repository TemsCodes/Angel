 <div class="container">
   <div class="title">
    <h2 class="text-center"><%= @place.name %></h2>
    <h3 class="text-center"><%= @place.address %></>
    <p><%#= @place.website %> </p>
    <p> <%#= @place.phone_number %> </p>
   </div>

   <div>
      <%= cl_image_tag @place.photo.key, id: "image", height: 180, width: 360, crop: :fill %>
   </div>

   <%# <div>
    <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
   </div> %>

   <div id="map" class = "map-box"
     style="width: 100%; height: 400px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
   </div>

   <div class="place-info">
    <p><%= @place.description%></p>
    <%##id="place-description"><%= @place.description%>
   </div>

   <%# <div class="col-5"> %>
    <div class="booking-form">
     <h3 class="text-center">Book your Angel</h3>
      <%= simple_form_for([ @place, @booking ]) do |f| %>
        <%= f.input :date, as: :datetime, html5: true %>
        <%= f.input :identification %>
        <%= f.input :details, label: "How can we identify you?" %>
        <%= f.submit "Book", class: "btn-search btn-search-index btn-island-new" %>
      <% end %>
    </div>
  <%# </div> %>
 </div>
